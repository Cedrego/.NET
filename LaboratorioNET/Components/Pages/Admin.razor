@page "/admin"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>Admin</PageTitle>

<div class="background-container">
    <div class="main-container">
        <header class="page-title-box">
            <h1>SportEvent Manager</h1>
            <div class="user-info">
                <span>🔐 Panel de Administrador</span>
                <button class="btn-cerrar-sesion" @onclick="IrAlHome">
                    🏠 Ir al Home
                </button>
            </div>
        </header>

        <div class="menu-box">
            <h2>ADMIN - Panel de Control</h2>

            <div class="menu-grid">
                <button class="menu-button" @onclick="NavigateToCrearCarrera">
                    🏁 Crear Carreras
                </button>

                <button class="menu-button" @onclick="InfoCorredores">
                    👥 Información de Corredores
                </button>

                <button class="menu-button" @onclick="NavigateToSimularCarrera">
                    🎮 Simular Carrera
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .background-container {
        background-image: url('images/2.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .main-container {
        background-color: #79c9e0;
        min-height: 100vh;
        padding: 20px;
    }

    .page-title-box {
        background-color: #efefef;
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .page-title-box h1 {
        font-size: 32px;
        font-weight: bold;
        color: #333;
        margin: 0;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .user-info span {
        font-size: 16px;
        color: #333;
    }

    .btn-cerrar-sesion {
        padding: 10px 20px;
        background-color: #2196F3;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-cerrar-sesion:hover {
        background-color: #1976D2;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .menu-box {
        background-color: #efefef;
        padding: 40px;
        border-radius: 15px;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .menu-box h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 40px;
        border-bottom: 3px solid #79c9e0;
        padding-bottom: 15px;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .menu-button {
        padding: 30px 20px;
        background-color: #FF9800;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .menu-button:hover {
        background-color: #F57C00;
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    @@media (max-width: 768px) {
        .page-title-box {
            flex-direction: column;
            gap: 15px;
        }

        .user-info {
            flex-direction: column;
            width: 100%;
            text-align: center;
        }

        .menu-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private void NavigateToCrearCarrera()
    {
        Navigation.NavigateTo("/crear_carrera");
    }

    private async Task InfoCorredores()
    {
        Navigation.NavigateTo("/info_corredores");
    }

    private void NavigateToSimularCarrera()
    {
        Navigation.NavigateTo("/simular_carrera");
    }

    private void IrAlHome()
    {
        Navigation.NavigateTo("/");
    }
}
