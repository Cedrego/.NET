@page "/"

<PageTitle>Menu Inicial</PageTitle>

<!-- Contenedor principal para el fondo azul -->
<div class="main-container">

    <!-- 1. Encabezado superior -->
    <header class="page-title-box">
        <h1>SportEvent Manager</h1>
    </header>

    <!-- 2. Caja del menú central -->
    <div class="menu-box">
        <h2>Menu</h2>
        
        <!-- Contenedor para los botones -->
        <div class="button-group">
            <!-- Botones principales (color lila/púrpura claro) -->
            <button class="menu-button primary">Informacion de corredores</button>
            <button class="menu-button primary">Informacion de la carrera</button>
            <button class="menu-button primary">Ingresar como Corredor</button>
            
            <!-- Botón gris (inactivo o secundario) -->
            <button class="menu-button secondary">Crear Carrera</button>
            
            <!-- Botón de Administrador (color verde) -->
            <button class="menu-button admin">Opciones Admin</button>
        </div>
    </div>

</div>

