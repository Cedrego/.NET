@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation
<PageTitle>Menu Inicial</PageTitle>

<!-- Contenedor principal para el fondo azul -->
<div class="main-container">

    <!-- 1. Encabezado superior -->
    <header class="page-title-box">
        <h1>SportEvent Manager</h1>
    </header>

    <!-- 2. Caja del menú central -->
    <div class="menu-box">
        <h2>Menu</h2>
        
        <!-- Contenedor para los botones -->
        <div class="button-group">
            <!-- Botones principales (color lila/púrpura claro) -->
            <button class="menu-button primary" @onclick="NavigateToInfoCorredores">
                Informacion de corredores
            </button>
            <button class="menu-button primary" @onclick="NavigateToInfoCarrera">
                Informacion de la carrera
            </button>
            <button class="menu-button primary" @onclick="NavigateToIngresoCorredor">
                Ingresar como Corredor
            </button>
            
            <!-- Botón gris (inactivo o secundario) -->
            <button class="menu-button secondary" @onclick="NavigateToCrearCarrera">
                Crear Cuenta
            </button>
            
            <!-- Botón de Administrador (color verde) -->
            <button class="menu-button admin" @onclick="NavigateToAdmin">
                Opciones Admin
            </button>
        </div>
    </div>

</div>

@code { // Métodos de navegación
    private void NavigateToInfoCorredores()
    {
        Navigation.NavigateTo("/info_corredor");
    }

    private void NavigateToInfoCarrera()
    {
        Navigation.NavigateTo("/info_corredores");
    }

    private void NavigateToIngresoCorredor()
    {
        Navigation.NavigateTo("/crear_cuenta");
    }

    private void NavigateToCrearCarrera()
    {
        Navigation.NavigateTo("/crear_carrera");
    }

    private void NavigateToAdmin()
    {
        Navigation.NavigateTo("/admin");
    }
}