@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation
<PageTitle>Menu Inicial</PageTitle>

<div class="background-container">
    <div class="main-container">
        <!-- 1. Encabezado superior -->
        <header class="page-title-box">
            <h1>SportEvent Manager</h1>
        </header>

        <!-- 2. Caja del menú central -->
        <div class="menu-box">
            <h2>Menu</h2>
            
            <!-- Contenedor para los botones -->
            <div class="button-group">
                <!-- Botones principales -->
                <button class="menu-button primary" @onclick="NavigateToInfoCorredores">
                    Informacion de Corredor
                </button>
                <button class="menu-button primary" @onclick="NavigateToInfoCarrera">
                    Información de Corredores
                </button>
                <button class="menu-button primary" @onclick="NavigateToIngresoCorredor">
                    Ingresar como Corredor
                </button>
                <button class="menu-button primary" @onclick="NavigateToEstadoCarrera">
                    Estado de Carrera
                </button>
                
                <!-- Botón de Administrador -->
                <button class="menu-button admin" @onclick="NavigateToAdmin">
                    Opciones Admin
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .background-container {
        background-image: url('images/2.jpg'); /* Reemplaza 'fondo.jpg' con el nombre de tu imagen */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .main-container {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 20px;
        background: rgba(0, 0, 0, 0.5); /* Fondo semitransparente para mejor legibilidad */
    }

    .page-title-box {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px 40px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .page-title-box h1 {
        margin: 0;
        color: #333;
        font-size: 2.5em;
        text-align: center;
    }

    .menu-box {
        background: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 15px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .menu-box h2 {
        text-align: center;
        color: #333;
        margin-bottom: 25px;
        font-size: 1.8em;
    }

    .button-group {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .menu-button {
        padding: 15px 25px;
        border: none;
        border-radius: 8px;
        font-size: 1.1em;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        width: 100%;
    }

    .menu-button.primary {
        background: linear-gradient(145deg, #6a75ca, #8b95e9);
        color: white;
    }

    .menu-button.admin {
        background: linear-gradient(145deg, #4caf50, #45a049);
        color: white;
    }

    .menu-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .menu-button:active {
        transform: translateY(0);
    }
</style>

@code { // Métodos de navegación
    private void NavigateToInfoCorredores()
    {
        Navigation.NavigateTo("/info_corredor");
    }

    private void NavigateToInfoCarrera()
    {
        Navigation.NavigateTo("/info_corredores");
    }
    private void NavigateToEstadoCarrera()
    {
        Navigation.NavigateTo("/info_carreras");
    }

    private void NavigateToIngresoCorredor()
    {
        Navigation.NavigateTo("/iniciar_sesion");
    }

    private void NavigateToAdmin()
    {
        Navigation.NavigateTo("/ingresar_admin");
    }
}