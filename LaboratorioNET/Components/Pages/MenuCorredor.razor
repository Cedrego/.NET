@page "/menu-corredor"
@rendermode InteractiveServer
@using LaboratorioNET.Services
@inject NavigationManager Navigation
@inject SesionService SesionService
@implements IDisposable

<PageTitle>Menú Corredor</PageTitle>
<div class="background-container">
@if (!SesionService.EstaAutenticado)
{
    <div class="no-autenticado">
        <p>⚠️ No has iniciado sesión</p>
        <button @onclick='() => Navigation.NavigateTo("/iniciar_sesion")'>
            Ir a Iniciar Sesión
        </button>
    </div>
}
else
{
    <div class="main-container">
        <header class="page-title-box">
            <h1>SportEvent Manager</h1>
            <div class="user-info">
                <span>👤 Bienvenido, <strong>@SesionService.NombreUsuario</strong></span>
                <button class="btn-cerrar-sesion" @onclick="CerrarSesion">
                    🚪 Cerrar Sesión
                </button>
            </div>
        </header>

        <div class="menu-box">
            <h2>Menú Principal</h2>

            <div class="menu-grid">
                <button class="menu-button" @onclick='() => Navigation.NavigateTo("/info_corredor")'>
                    📊 Mi Información
                </button>

                <button class="menu-button" @onclick='() => Navigation.NavigateTo("/preinscripcion")'>
                    🏃 Inscribirse en Carrera
                </button>

                <button class="menu-button" @onclick='() => Navigation.NavigateTo("/mis-inscripciones")'>
                    📝 Mis Inscripciones
                </button>

                <button class="menu-button" @onclick='() => Navigation.NavigateTo("/info_carreras")'>
                    🏆 Informacion de Carreras
                </button>
            </div>
        </div>
    </div>
}
</div>
<style>
.background-container {
        background-image: url('images/2.jpg'); /* Reemplaza 'fondo.jpg' con el nombre de tu imagen */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .main-container {
        background-color: #79c9e0;
        min-height: 100vh;
        padding: 20px;
    }

    .page-title-box {
        background-color: #efefef;
        padding: 20px;
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .page-title-box h1 {
        font-size: 32px;
        font-weight: bold;
        color: #333;
        margin: 0;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .user-info span {
        font-size: 16px;
        color: #333;
    }

    .btn-cerrar-sesion {
        padding: 10px 20px;
        background-color: #f44336;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-cerrar-sesion:hover {
        background-color: #d32f2f;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .menu-box {
        background-color: #efefef;
        padding: 40px;
        border-radius: 15px;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .menu-box h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 40px;
        border-bottom: 3px solid #79c9e0;
        padding-bottom: 15px;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .menu-button {
        padding: 30px 20px;
        background-color: #6da571;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .menu-button:hover {
        background-color: #578a5b;
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .no-autenticado {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #79c9e0;
        gap: 20px;
    }

    .no-autenticado p {
        font-size: 24px;
        color: #333;
        font-weight: bold;
    }

    .no-autenticado button {
        padding: 15px 30px;
        background-color: #6da571;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
    }

    @@media (max-width: 768px) {
        .page-title-box {
            flex-direction: column;
            gap: 15px;
        }

        .user-info {
            flex-direction: column;
            width: 100%;
            text-align: center;
        }

        .menu-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    protected override void OnInitialized()
    {
        // Verificar si hay sesión activa
        if (!SesionService.EstaAutenticado)
        {
            Navigation.NavigateTo("/iniciar_sesion");
            return;
        }

        // Suscribirse a cambios de sesión
        SesionService.OnCambioSesion += StateHasChanged;
    }

    private void CerrarSesion()
    {
        SesionService.CerrarSesion();
        Navigation.NavigateTo("/", forceLoad: true);
    }

    public void Dispose()
    {
        // Desuscribirse al destruir el componente
        SesionService.OnCambioSesion -= StateHasChanged;
    }
}