@code {
    private List<CarreraInscritaViewModel> Inscripciones = new List<CarreraInscritaViewModel>();
    private bool IsLoading = true;
    private string Message = "";
    private string MessageType = "";

    private class CarreraInscritaViewModel
    {
        public string Nombre { get; set; } = "";
        public int NumDorsal { get; set; }
        public DateTime FechaInicio { get; set; }
        public string LugarSalida { get; set; } = "";
        public DateTime FechaInicioInsc { get; set; }
        public int LimiteParticipantes { get; set; }
        public int CantSecciones { get; set; }
        public string Tipo { get; set; } = "";
        public bool Terminada { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        Sesion.OnCambioSesion += StateHasChanged;

        if (Sesion.EstaAutenticado)
        {
            await CargarMisInscripciones();
        }
        else
        {
            IsLoading = false;
        }
    }

    public void Dispose()
    {
        Sesion.OnCambioSesion -= StateHasChanged;
    }

    private async Task CargarMisInscripciones()
    {
        IsLoading = true;
        Message = "";
        
        try
        {
            var documentoCorredor = Sesion.DocumentoIdentidad;
            
            if (string.IsNullOrEmpty(documentoCorredor))
            {
                Message = "❌ No se pudo obtener tu información. Por favor, inicia sesión nuevamente.";
                MessageType = "error";
                return;
            }

            var registrosDelCorredor = await MongoDbS.ObtenerRegistrosPorCorredorAsync(documentoCorredor);

            if (registrosDelCorredor == null || !registrosDelCorredor.Any())
            {
                Message = "📋 No estás inscrito en ninguna carrera actualmente.";
                MessageType = "info";
                return;
            }

            // Cargar detalles de cada carrera
            foreach (var registro in registrosDelCorredor)
            {
                var carrera = await MongoDbS.ObtenerCarreraPorIdCarreraAsync(registro.IDCarrera);
                
                if (carrera != null)
                {
                    Inscripciones.Add(new CarreraInscritaViewModel
                    {
                        Nombre = carrera.Nombre,
                        NumDorsal = registro.NumDorsal,
                        FechaInicio = carrera.FechaInicio,
                        LugarSalida = carrera.LugarSalida,
                        FechaInicioInsc = carrera.FechaInicioInsc,
                        LimiteParticipantes = carrera.LimiteParticipantes,
                        CantSecciones = carrera.CantSecciones,
                        Tipo = carrera.Tipo,
                        Terminada = carrera.Terminada
                    });
                }
            }

            // Ordenar: carreras activas primero, luego por fecha
            Inscripciones = Inscripciones
                .OrderBy(i => i.Terminada)
                .ThenBy(i => i.FechaInicio)
                .ToList();

            Console.WriteLine($"✅ Se cargaron {Inscripciones.Count} inscripciones");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando inscripciones: {ex.Message}");
            Message = "❌ Error al cargar tus inscripciones. Intenta nuevamente.";
            MessageType = "error";
        }
        finally
        {
            IsLoading = false;
        }
    }
}