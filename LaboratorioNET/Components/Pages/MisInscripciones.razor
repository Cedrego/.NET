@page "/mis-inscripciones"
@rendermode InteractiveServer
@inject LaboratorioNET.Services.SesionService Sesion
@inject LaboratorioNET.Services.MongoDbService MongoDbS
@inject NavigationManager Navigation
@using LaboratorioNET.Entities 

<PageTitle>Mis Inscripciones</PageTitle>

<div class="background-container">
    <div class="main-container">
        <div class="form-container">
            <h2>Mis Inscripciones</h2>
            <div class="subtitle">Carreras en las que estás inscrito</div>

            @if (!Sesion.EstaAutenticado)
            {
                <div class="warning-message">
                    <p>⚠️ Debes iniciar sesión para ver tus inscripciones</p>
                    <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/iniciar_sesion")'>
                        Ir a Iniciar Sesión
                    </button>
                </div>
            }
            else
            {
                @if (IsLoading)
                {
                    <div class="loading-container">
                        <div class="spinner"></div>
                        <p>Cargando tus inscripciones...</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Message))
                {
                    <div class="message @MessageType">
                        @Message
                    </div>
                    
                    @if (MessageType == "info")
                    {
                        <div class="button-container">
                            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/preinscripcion")'>
                                📝 Inscribirme a una Carrera
                            </button>
                        </div>
                    }
                }
                else if (Inscripciones.Any())
                {
                    <div class="user-info">
                        <p><strong>📊 Total de inscripciones:</strong> @Inscripciones.Count</p>
                    </div>

                    <div class="inscripciones-grid">
                        @foreach (var inscripcion in Inscripciones)
                        {
                            <div class="carrera-card @(inscripcion.Terminada ? "terminada" : "activa")">
                                <div class="card-header">
                                    <div class="header-content">
                                        <h3>@inscripcion.Nombre</h3>
                                        <span class="badge @(inscripcion.Terminada ? "badge-terminada" : "badge-activa")">
                                            @(inscripcion.Terminada ? "✓ Terminada" : "⏱️ Activa")
                                        </span>
                                    </div>
                                    <div class="dorsal-badge">
                                        <span class="dorsal-label">Dorsal</span>
                                        <span class="dorsal-number">#@inscripcion.NumDorsal</span>
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    <div class="info-row">
                                        <span class="icon">📅</span>
                                        <div class="info-content">
                                            <strong>Fecha de Carrera:</strong>
                                            <span>@inscripcion.FechaInicio.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                    </div>

                                    <div class="info-row">
                                        <span class="icon">🏁</span>
                                        <div class="info-content">
                                            <strong>Tipo:</strong>
                                            <span>@inscripcion.Tipo</span>
                                        </div>
                                    </div>

                                    <div class="info-row">
                                        <span class="icon">📍</span>
                                        <div class="info-content">
                                            <strong>Lugar de Salida:</strong>
                                            <span>@inscripcion.LugarSalida</span>
                                        </div>
                                    </div>

                                    <div class="info-row">
                                        <span class="icon">📋</span>
                                        <div class="info-content">
                                            <strong>Inscripciones desde:</strong>
                                            <span>@inscripcion.FechaInicioInsc.ToLocalTime().ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>

                                    <div class="stats-row">
                                        <div class="stat-box">
                                            <span class="stat-value">@inscripcion.LimiteParticipantes</span>
                                            <span class="stat-label">👥 Límite</span>
                                        </div>
                                        <div class="stat-box">
                                            <span class="stat-value">@inscripcion.CantSecciones</span>
                                            <span class="stat-label">🚩 Checkpoints</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                <div class="button-container">
                    <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/preinscripcion")'>
                        ➕ Nueva Inscripción
                    </button>
                    <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/menu-corredor")'>
                        ← Volver al Menú
                    </button>
                </div>
            }
        </div>
    </div>
</div>

