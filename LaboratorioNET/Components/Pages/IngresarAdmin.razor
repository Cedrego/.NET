@page "/ingresar_admin"
@rendermode InteractiveServer
@using LaboratorioNET.Services
@using LaboratorioNET.Entities
@using Google.Cloud.Firestore
@inject NavigationManager Navigation
@inject FirebaseService FirebaseService
@inject SesionService SesionService

<PageTitle>Admin</PageTitle>

<style>
    .background-container {
        background-image: url('images/2.jpg'); /* Reemplaza 'fondo.jpg' con el nombre de tu imagen */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .input-text {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .menu-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        padding: 40px;
        border-radius: 10px;
        width: 300px;
        margin: 100px auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .menu-button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .menu-button:hover {
        background-color: #0056b3;
    }

    .error-message {
        color: red;
        margin-top: 10px;
    }
</style>

<div class="background-container">
<div class="menu-box">
    <h2>ADMIN</h2>

    <!-- Campo de contraseña -->
    <input type="password" @bind="adminPassword" placeholder="Ingrese contraseña" class="input-text" />

    <!-- Botón -->
    <button class="menu-button" @onclick="VerificarAdmin">Ingresar</button>

    <p class="error-message">@mensajeError</p>
</div>
</div>
@code {
    private string adminPassword = string.Empty;
    private string mensajeError = string.Empty;
    private bool estaCargando = false;

    private async Task VerificarAdmin()
    {
        mensajeError = string.Empty;
        estaCargando = true;
        StateHasChanged();

        try
        {
            // 🔹 Accede a la colección "admin" y verifica contraseña
            var adminSnapshot = await FirebaseService.Admins
                .WhereEqualTo("contraseña", adminPassword)
                .WhereEqualTo("idAdmin", "1")
                .Limit(1)
                .GetSnapshotAsync();

            // 🔸 Si no hay coincidencias, credenciales incorrectas
            if (adminSnapshot.Documents.Count == 0)
            {
                mensajeError = "❌ Credenciales incorrectas.";
                estaCargando = false;
                StateHasChanged();
                return;
            }

            // ✅ Si encontró al admin con las credenciales correctas
            var doc = adminSnapshot.Documents.First();
            Dictionary<string, object> adminData = doc.ToDictionary();

            // Verifica que tenga los campos requeridos para ser admin
            if (!adminData.TryGetValue("contraseña", out object? pass) || 
                !adminData.TryGetValue("idAdmin", out object? idAdmin) ||
                pass?.ToString() != "admin.admin" || 
                idAdmin?.ToString() != "1")
            {
                mensajeError = "❌ No tienes permisos de administrador.";
                estaCargando = false;
                StateHasChanged();
                return;
            }

            // Inicia sesión como administrador con el rol explícito
            SesionService.IniciarSesion(doc.Id, "Administrador", "Administrador");
            SesionService.IniciarSesion(doc.Id, "Administrador");

        }
        catch (Exception ex)
        {
            mensajeError = $"❌ Error al iniciar sesión: {ex.Message}";
            Console.WriteLine($"[ERROR FIREBASE ADMIN]: {ex}");
        }

        estaCargando = false;
        StateHasChanged();
    }
}
