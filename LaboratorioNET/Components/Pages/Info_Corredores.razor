@page "/info_corredores"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>Información Corredores</PageTitle>

<div class="page">
    <div class="container-box">
        <aside class="sidebar">
            <h2>SportEvent<br />Manager,</h2>
        </aside>

        <main class="content">
            <h1 class="title">Información del Corredores</h1>

            <div class="info-section">
                <p><strong>Título:</strong></p>
                <select class="combo-carrera">
                    <option value="">Nombre de la carrera</option>
                </select>
                <p><strong>Nacionalidad:</strong></p>
                <select class="combo-carrera">
                    <option value="">Nacionalidad</option>
                </select>
                <p><strong>Edad:</strong></p>
                <select class="combo-carrera">
                    <option value="">Edad</option>
                </select>
            </div>

            <h3>Corredores:</h3>
            <table class="info-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Edad</th>
                        <th>Fecha de Nacimiento</th>
                        <th>Nacionalidad</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td colspan="5">&nbsp;</td></tr>
                </tbody>
            </table>
        </main>
    </div>
</div>

<style>
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: #79c9e0; /* fondo celeste general */
}

/* Contenedor general centrado */
.page {
    background-color: #79c9e0;
    background: #79c9e0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

/* Caja blanca redondeada con los dos paneles */
.container-box {
    display: flex;
    background-color: #79c9e0;
    background: #79c9e0;
    border: 2px solid #79c9e0;
    border-radius: 20px;
    width: 95%;
    height: 90vh;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

/* Sidebar izquierda */
.sidebar {
    background-color: #efefef;
    border-right: 2px solid #79c9e0;
    border-radius: 20px 20px 20px 20px;
    width: 25%;
    min-width: 220px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22px;
    font-weight: bold;
}

/* Panel principal */
.content {
    flex: 1;
    background-color: #efefef;
    border-radius: 20px 20px 20px 20px;
    padding: 40px;
    overflow-y: auto;
}

/* Título principal */
.title {
    text-align: center;
    font-weight: bold;
    border-bottom: 1px solid #000;
    margin-bottom: 25px;
    font-size: 24px;
}

/* Datos del corredor */
.info-section p {
    margin: 4px 0;
    font-size: 15px;
}

/* Subtítulos */
h3 {
    font-size: 16px;
    font-weight: bold;
    margin-top: 25px;
    margin-bottom: 5px;
}

/* Tablas */
.info-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 25px;
    background-color: #d5d2f3;
    border: 1px solid #999;
}

.info-table th,
.info-table td {
    border: 1px solid #999;
    padding: 6px;
    text-align: center;
    font-size: 14px;
}
</style>